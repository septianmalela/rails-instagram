    <% if user_signed_in? %>
    <div class="wrapper d-flex align-items-stretch">
      <nav id="sidebar">
        <div class="p-4 pt-5">
          <%= image_tag(current_user.avatar.url, size: "400x300", class: 'img logo rounded-circle mb-5')%>
          <ul class="list-unstyled components mb-5">
            <li class="active">
                <div class="counter d-flex justify-content-center">
                  <div class="row justify-content-center">
                    <div class="col">
                      <strong class="number"><%= current_user.posts.count %></strong><br>
                      <span class="number-label">Posts</span>
                    </div>
                    <div class="col">
                      <strong class="number"><%= Following.where(follower_id: current_user.id).count %></strong>
                      <span class="number-label">Followers</span>
                    </div>
                    <div class="col">
                      <strong class="number"><%= current_user.followings.count %></strong>
                      <span class="number-label">Following</span>
                    </div>
                  </div>
              </div>
            </li>
            <li>
              <a href=""><%= link_to "Home", root_path %></a>
            </li>
            <li>
              <a href=""><%= link_to "Create New Post", new_post_path %></a>
            </li>
            <li>
              <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle"><%= current_user.name %></a>
              <ul class="collapse list-unstyled" id="homeSubmenu">
                <li>
                    <a href=""><%= link_to "Profile User", user_path(current_user) %></a>
                </li>
                <li>
                    <a href=""><%= link_to "Edit Profile", edit_user_registration_path %></a>
                </li>
                <li>
                    <a href=""><%= button_to "Logout", destroy_user_session_path, method: :delete %></a>
                </li>
              </ul>
            </li>
          </ul>
          <div class="footer">
            <p><!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
              NineGram &copy;<script>document.write(new Date().getFullYear());</script>
              <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. --></p>
          </div>
        </div>
      </nav>
      <% end %>
        <!-- Page Content  -->
        <% if user_signed_in? %>
      <div id="content" class="p-4 p-md-5">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
          <div class="container-fluid">

            <button type="button" id="sidebarCollapse" class="btn btn-primary">
              <i class="fa fa-bars"></i>
              <span class="sr-only">Toggle Menu</span>
            </button>
            <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <i class="fa fa-bars"></i>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="nav navbar-nav">
                <li class="nav-item active" style="padding-left: 15px;">
                    <a class="nav-link" href="<% root_path %>">Home</a>
                </li>
                <%= render 'users/header' %>
              </ul>
            </div>
          </div>
        </nav>
        <% end %>
        <%= yield %>
      </div>
    </div>